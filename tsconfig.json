{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"lib": ["es2015", "DOM"],
		"module": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist/tsc",
		"sourceMap": true,
		"target": "es5",
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "index.d.ts"],
	"exclude": [".git", "dist", "node_modules", "public"]
}
