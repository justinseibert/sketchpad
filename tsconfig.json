{
	"compilerOptions": {
		"allowJs": false,
		"module": "es6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"target": "es5",
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"]
		}
	},
	"include": ["src", "index.d.ts"],
	"exclude": [".git", "dist", "node_modules", "public"]
}
